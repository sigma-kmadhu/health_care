<h3 class="company-head">List of Companies and their last submitted date</h3>
<table class="table table-striped company-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Company Name</th>
      <th scope="col">Submitted On</th>
    </tr>
  </thead>
  <tbody>
  <% @companies.each_with_index do |company, index| %>
    <tr>
      <th scope="row"><%= index %></th>
      <td><%= company.name %></td>
      <% if company.last_updated_at.present? %>
        <td><%= company.last_updated_at.strftime('%m/%d/%Y') %></td>
      <% else %>
        <td>-</td>
      <%end%>
    </tr>
  <% end %>
  </tbody>
</table>