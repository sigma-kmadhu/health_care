
<div class="container">
    <div class="change-password-form">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <h2 class="text-center">Change your password</h2>       
            <div class="form-group">
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Please enter new password.' %>
            </div>
            <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Please re-enter the new password.' %>
            </div>
            <div class="form-group">
                <%= f.submit "Change my password", class: 'btn btn-primary btn-block' %>
            </div>
            <div class="clearfix">
                <%= render "devise/shared/links" %>
            </div>        
        <% end %>
    </div>
</div>

