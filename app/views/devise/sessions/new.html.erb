<div class="container">
    <div class="login-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h2 class="text-center">Log in</h2>       
            <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Please enter email.' %>
            </div>
            <div class="form-group">
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Please enter password.' %>
            </div>
            <div class="form-group">
                <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
            </div>
            <div class="clearfix">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                <%= render "devise/shared/links" %>
            </div>        
        <% end %>
    </div>
</div>

